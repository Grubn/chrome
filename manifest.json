{
  "name": "Oracle",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Oracle a better browsing experience.",
  "icons": {
  },
  "background": {
    "scripts": [
      "app/misc/chromeapi.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "background",
    "clipboardRead",
    "clipboardWrite",
    "idle",
    "management",
    "notifications",
    "pageCapture",
    "storage",
    "identity",
    "identity.email",
    "webNavigation",
    "webRequest",
    "history",
    "*://*.google.com/"
  ],

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "dist/bundle.js"
      ],
      "css": ["dist/main.min.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_title": "Oracle",
    "default_popup": "index.html"
  }
}
